<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- to run the test tag parallely we have to write parallel="tests" at the suite level -->


<suite name="Suite"  parallel = "tests">

<!-- to execute the test tag paralely we have to create the test tag  -->

  <test thread-count="5" name="Test1">
    <classes>
      <class name="testngdisscussion.ParallelTestTagExecution1"/>
    </classes>
  </test> <!-- Test -->
  
  
  <test thread-count="5" name="Test2">
    <classes>
      <class name="testngdisscussion.ParallelTestTagExecution2"/>
    </classes>
  </test> <!-- Test -->
  
  
  <test thread-count="5" name="Test3">
    <classes>
      <class name="testngdisscussion.ParallelTestTagExecution3"/>
    </classes>
  </test> <!-- Test -->
  
  
  
  
  
  
  
</suite> <!-- Suite -->
